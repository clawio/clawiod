#!/bin/sh

set -e

cp /opt/clawiod/config/clawiod.conf /etc/clawiod/clawiod.conf
cp /opt/clawiod/config/fileauth.conf /etc/clawiod/conf.d/fileauth.conf
cp /opt/clawiod/init/sysvinit-centos/clawiod /etc/rc.d/init.d/clawiod
mkdir -p /home/clawiod/data/tmp
mkdir -p /home/clawiod/data/notmp
chown -R clawiod:clawiod /home/clawiod
chown -R clawiod:clawiod /etc/clawiod
chmod -R 775 /home/clawiod/data
chmod 755 /etc/rc.d/init.d/clawiod
